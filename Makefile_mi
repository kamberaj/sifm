FF90 = mpif90
SRC = 
OBJS_te = defs.o defs_mpi.o random.o telinklist.o teutils.o minfo.o demo_mi.o
#
mirun.exe:	$(OBJS_te)
	$(FF90) -o mirun.exe -O2 defs.f90 defs_mpi.f90 random.f90 telinklist.f90 teutils.f90 minfo.f90 demo_mi.f90 
	@echo Mutual Information COMPLETED
#
# transfer entropy source file rules
defs.o: $(SRC)defs.f90
	$(FF90) -c $(SRC)defs.f90
#
defs_mpi.o: $(SRC)defs_mpi.f90
	$(FF90) -c $(SRC)defs_mpi.f90
#
random.o: $(SRC)random.f90
	$(FF90) -c $(SRC)random.f90
#
telinklist.o:	$(SRC)telinklist.f90
	$(FF90) -c $(SRC)telinklist.f90

#
teutils.o: $(SRC)teutils.f90
	$(FF90) -c $(SRC)teutils.f90
#
#
#
minfo.o: $(SRC)minfo.f90
	$(FF90) -c $(SRC)minfo.f90
#

clean:
	rm -f   *.mod	
	rm -f   $(OBJS_te)
	rm -f   mirun.exe 
demo_mi.o: $(SRC)demo_mi.f90
	$(FF90) -c $(SRC)demo_mi.f90

